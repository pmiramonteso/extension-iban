{
    "manifest_version": 3,
    "name": "IBAN Checker",
    "version": "1.0",
    "description": "Detecta y valida IBANs en p√°ginas web.",
    "icons": {
        "128": "IBAN.png"
    },
    "permissions": [
        "storage",
        "scripting",
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": "IBAN.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ]
}
